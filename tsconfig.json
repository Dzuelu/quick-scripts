{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "target": "ES2022"
  },
  "exclude": ["node_modules"]
}
